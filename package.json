    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "nodemailer": "^4.7.0",
    "nuxt": "^2.3.2",
    "nuxt-start": "^2.3.2",
    "rucksack-css": "^1.0.2",
    "vuetify": "^1.3.9",
    "vuetify-loader": "^1.0.6"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-imports": "^1.5.1",
    "cache-loader": "^1.2.5",
    "eslint": "^5.9.0",
    "eslint-config-ayotte": "^1.3.11",
